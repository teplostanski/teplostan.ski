  <ul class='ul'>
    {
      selected.map(({ label, link }) => (
        <li>
          <a href={link} target='_blank' rel='noopener noreferrer'>
            <span>{label}</span>
          </a>
        </li>
      ))
    }
  </ul>
  <footer class='footer'>Â© 2022-2025</footer>
</Layout>

<style>
  .p::before {
    content: '<p>';
    color: gray;
  }
  .p::after {
    content: '</p>';
    color: gray;
  }
  .ul::before {
    content: '<ul>';
    color: gray;
  }
  .ul::after {
    content: '</ul>';
    color: gray;
  }
  .ul li::before {
    content: '<li>';
    color: gray;
  }
  .ul li::after {
    content: '</li>';
    color: gray;
  }
  .ul {
    list-style: none;
    padding: 0;
  }
  .ul li {
    padding: 0 0 0 1em;
  }
  .footer::after {
    content: '</footer>';
    color: gray;
  }
  .footer::before {
    content: '<footer>';
    color: gray;
  }
</style>
